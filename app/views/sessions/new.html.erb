<h1>Log In</h1>

<%= form_with model: @user, url: session_path do |f| %>

	<div>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.submit "Log in" %>
	</div>
<% end %>

<%= link_to "Forgot your password", new_password_reset_path  %>